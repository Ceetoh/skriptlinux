#!/bin/bash

ALLIKAS=~/skriptlinux/praks2/src
SIHT=~/skriptlinux/praks2/backup
LOGDIR=~/skriptlinux/praks2/logs
KUUPAEV=$(date +"%d.%m.%Y_%H-%M")
ARHIV="$SIHT/src_backup_$KUUPAEV.tar.zst"

mkdir -p "$SIHT" "$LOGDIR"

VABA_RUUM=$(df -B1 "$SIHT" | awk 'NR==2{print $4}')
KAUST_SUURUS=$(du -sb "$ALLIKAS" | awk '{print $1}')

if [ "$VABA_RUUM" -lt "$KAUST_SUURUS" ]; then
    echo "[ $(date '+%F %T') ] BACKUP FAIL: puudub piisav ruum" >> "$LOGDIR/backup.log"
    echo "Varundamine ebaõnnestus! Puudub piisav vaba ruum."
    exit 1
fi

echo "[ $(date '+%F %T') ] BACKUP START" >> "$LOGDIR/backup.log"

echo "Kuiv jooks: failide loend, mis läheks arhiivi"
find "$ALLIKAS" \( -name '*.jpg' -o -path "$ALLIKAS/bin*" \) -prune -o -print | sed "s|$ALLIKAS|src|"

tar --exclude='*.jpg' --exclude='bin' -I 'zstd -19 -T0' -cf "$ARHIV" -C "$(dirname "$ALLIKAS")" "$(basename "$ALLIKAS")"

if [ $? -ne 0 ]; then
    echo "[ $(date '+%F %T') ] BACKUP FAIL" >> "$LOGDIR/backup.log"
    echo "Varundamine ebaõnnestus!"
    exit 1
fi

echo "[ $(date '+%F %T') ] BACKUP SUCCESS" >> "$LOGDIR/backup.log"
echo "Varukoopia loodud: $ARHIV"

echo
echo "Kontrollin loodud arhiivi sisu (esimesed 5 kirjet):"
tar -I 'zstd -d' -tf "$ARHIV" | head -n 5
echo "Arhiiv kontrollitud — kui näed src/ alamkaustu, on kõik korras."

echo
echo "Varukoopia suurus:"
DU_SIZE=$(du -h "$ARHIV" | awk '{print $1}')
echo "$DU_SIZE"

echo
echo "Hoian alles ainult 3 kõige uuemat varukoopiat..."
ls -1t "$SIHT"/src_backup_*.tar.zst | tail -n +4 | xargs -r rm -f
echo "Vanad varukoopiad kustutatud, alles 3 uusimat."

echo "[ $(date '+%F %T') ] BACKUP END" >> "$LOGDIR/backup.log"
